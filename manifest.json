{
  "manifest_version": 3,
  "name": "GitHub PR Tracker",
  "version": "1.0",
  "description": "Track your active GitHub PRs with notifications",
  "permissions": ["storage", "alarms"],
  "host_permissions": ["https://api.github.com/*"],
  "action": {
    "default_popup": "dist/popup/popup.html",
    "default_icon": {
      "16": "icon.webp",
      "48": "icon.webp",
      "128": "icon.webp"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.webp",
    "48": "icon.webp",
    "128": "icon.webp"
  },
  "options_page": "dist/options/options.html"
}
